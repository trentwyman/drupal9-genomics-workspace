                  <label for="email">{{ 'Your email address'|t }}</label>
                  <input type="text" name="email" class="form-control" id="email" value="">
                  <input type="submit" name="commit" class="form_button btn btn-primary" id="go" value="{{ 'Sign up'|t }}">
              </form>
            {% endblock %}
          </nav>
        </div>
      </div>
    {% endblock %}
  </footer>
{% endblock %}
